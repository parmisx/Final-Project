<!doctype html>
<html>

  <head>
    <meta charset="UTF-8">
    <title>Playing</title> 
    <link rel="stylesheet" type="text/css" href="/main.css">
    <!-- embedding the font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=ADLaM+Display&display=swap" rel="stylesheet">

    <!-- javascript code for the answer submission -->
    <script>
        function showPopup(event){
          event.preventDefault();
          document.getElementById('popupMessage').style.display = 'flex';
        }
        function closePopup(){
          document.getElementById('popupMessage').style.display = 'none';
          window.location.href = '/';
        }
    </script>

  </head>

  <body>

    <!-- nav -->
    <nav>
        <ul class="nav-list">
          <li><a href="/"><img src="../assets/paw-icon.png" alt="Paw Points Icon">1270</a></li> 
          <li><a href="wardrobe"><img src="../assets/wardrobe-icon.png" alt="Wardrobe Icon"></a></li> 
          <li><a href="play"><img src="../assets/game-icon.png" alt="Play Game Icon"></a></li> 
          <li><a href="sleep"><img src="../assets/bed-icon.png" alt="Sleeping on bed Icon"></a></li> 
          <li><a href="/"><img src="../assets/level-icon.png" alt="Level Icon">8</a></li>
        </ul>
    </nav>

    <div class="game-container">
        <div class="question-container">2 x 2 = </div>
        <form method="POST" onsubmit="showPopup(event)"> <!-- action="answered" -->
            <input id="answerInput" type="number" name="answerInput" required>
            <input type="submit" value="Check" class="button"/>
        </form>
    </div>

    <div id="popupMessage" class="popup">
      <div class="popup-message">
        <p>Answer was correct/incorrect!</p>
        <p>Answer: 4</p>
        <p>Rewards: 57</p>
        <button onclick="closePopup()">Yay!</button>
      </div>
    </div>    

    <footer>
      <div class="progress-container">
        <div class="progress-items">
          <div class="energy-bar">
            <div class="energy-filled" style="width: 80%;"></div>
          </div>
          <div class="progress-label">Energy Bar</div>
        </div>
        <div class="progress-items">
          <div class="happiness-bar">
            <div class="happiness-filled" style="width: 35%;"></div>
          </div>
          <div class="progress-label">Happiness Bar</div>
        </div>
      </div>
    </footer>
    
  </body>

</html>