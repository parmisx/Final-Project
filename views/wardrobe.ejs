<!doctype html>
<html>

  <head>
    <meta charset="UTF-8">
    <title>Wardrobe</title> 
    <link rel="stylesheet" type="text/css" href="/main.css">
    <!-- embedding the font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=ADLaM+Display&display=swap" rel="stylesheet">
  </head>

  <body>

    <!-- nav -->
    <nav>
        <ul class="nav-list">
          <li>
            <img src="../assets/paw-icon.png" alt="Paw Points Icon">
            <span id="rewardsTotal"><%= rewardsTotal %></span>
          </li> 
          <li><a href="/"><img src="../assets/home-icon.png" alt="Home Icon"></a></li> 
          <li><a href="play"><img src="../assets/game-icon.png" alt="Play Game Icon"></a></li> 
          <li><a href="sleep"><img src="../assets/bed-icon.png" alt="Sleeping on bed Icon"></a></li> 
          <li><img src="../assets/level-icon.png" alt="Level Icon">8</li>
        </ul>
    </nav>

    <div class="wardrobe-container">
      <div class="wardrobe-shelf">
        <ul class="clothing-items">
          <li><img src="../assets/hatImg.png" alt="Hat image"></a></li>
          <li><img src="../assets/glassesImg.png" alt="Glasses image"></a></li>
          <li><img src="../assets/shirtImg.png" alt="Shirt image"></a></li>
          <li><img src="../assets/skirtImg.png" alt="Skirt image"></a></li>
          <li><img src="../assets/shoesImg.png" alt="Shoes image"></a></li>
        </ul>
      </div>
      <div class="pet-section">
        <img src="../assets/petModelFree.png" alt="3D model of pet" class="petModel2">
        <input type="submit" value="Change" class="change-button"/>
      </div>
    </div>

    <footer>
      <div class="progress-container">
        <div class="progress-items">
          <div class="energy-bar">
            <div class="energy-filled" style="width: 80%;"></div>
          </div>
          <div class="progress-label">Energy Bar</div>
        </div>
        <div class="progress-items">
          <div class="happiness-bar">
            <div class="happiness-filled" style="width: 35%;"></div>
          </div>
          <div class="progress-label">Happiness Bar</div>
        </div>
      </div>
    </footer>

  </body>

</html>